<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TapEvent" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_charcoal</item>
        <item name="colorPrimaryVariant">@color/light_charcoal_darker_hue</item>
        <item name="colorSecondary">@color/firebrick</item>
        <item name="colorSecondaryVariant">@color/sangria</item>

        <item name="android:colorBackground">@color/eerie_black</item>
        <item name="colorSurface">@color/dark_charcoal</item>
        <item name="colorOnPrimary">@color/whitesmoke</item>
        <item name="colorOnSecondary">@color/eerie_black</item>
        <item name="colorOnBackground">@color/whitesmoke</item>
        <item name="colorOnSurface">@color/whitesmoke</item>

        <item name="android:textColor">@color/whitesmoke</item>
    </style>

    <style name="Theme.TapEvent.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_charcoal</item>
        <item name="postSplashScreenTheme">@style/Theme.TapEvent</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_logo</item>
    </style>

    <style name="Theme.TapEvent.BottomNavigation">
        <item name="backgroundTint">@color/light_charcoal_hue</item>
        <item name="itemActiveIndicatorStyle">@style/Theme.TapEvent.BottomNavigation.Indicator</item>
        <item name="tint">@color/whitesmoke</item>
    </style>

    <style name="Theme.TapEvent.BottomNavigation.Indicator">
        <item name="backgroundTint">@color/light_charcoal_darker_hue</item>
        <item name="tint">@color/whitesmoke</item>
    </style>

    <style name="Theme.TapEvent.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/dark_charcoal</item>
        <item name="tint">@color/whitesmoke</item>
        <item name="android:textColor">@color/whitesmoke</item>
    </style>

    <style name="Theme.TapEvent.Button.SelectedControls" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/whitesmoke</item>
        <item name="tint">@color/eerie_black</item>
        <item name="android:textColor">@color/eerie_black</item>
    </style>

</resources>